<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context="me.paxana.cwnet.ui.MovieActivity">

    <TextView
        android:id="@+id/summaryTextView"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="center"
        android:textColor="@color/textPrimary"
        app:layout_constraintBottom_toTopOf="@+id/triggerListView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Type type Type type Type type Type type Type type Type type Type type Type type Type type"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="254dp"
        android:layout_height="115dp"
        android:layout_above="@+id/summaryTextView"
        android:layout_below="@+id/yearTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/posterImageView"
        android:textAlignment="center"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/posterImageView"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Blade Runner RETURN OF THE UNNECESSARILY LONG TITLE"
        app:layout_constraintHorizontal_bias="0.384"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/summaryTextView"
        app:layout_constraintTop_toTopOf="@+id/yearTextView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/br_poster"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/summaryTextView"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/yearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textSecondary"
        app:layout_constraintLeft_toRightOf="@+id/posterImageView"
        tools:text="1982"
        android:layout_marginLeft="118dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/titleTextView"
        app:layout_constraintVertical_bias="0.259"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="8dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_begin="256dp"/>

    <ExpandableListView
        android:id="@+id/triggerListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:stackFromBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"/>

</android.support.constraint.ConstraintLayout>